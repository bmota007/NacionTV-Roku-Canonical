<?xml version="1.0" encoding="utf-8" ?>
<component name="HomeScene" extends="Scene">
  <script uri="pkg:/components/HomeScene.brs" />
  <script uri="pkg:/components/Config.brs" />

  <interface>
    <function name="requestDeepLink" />
    <function name="OnInputAssoc" />
    <function name="launchContent" />
    <function name="onKeyEvent" />
  </interface>

  <children>
    <Poster id="Bg"
            width="1280" height="720" translation="[0,0]"
            uri="pkg:/images/bg_idle.jpg"
            loadDisplayMode="scaleToFill"
            visible="true" />

    <Rectangle id="BgDim"
               width="1280" height="720" translation="[0,0]"
               color="0x000000" opacity="0.35" visible="true" />

    <Video id="Video"
           width="1280" height="720" translation="[0,0]"
           visible="false" />

    <!-- TWO BIG TILES (Internacional + Houston) -->
    <RowList id="RowList"
             translation="[110,380]"
             itemComponentName="RowListItems"
             numRows="1"
             showRowLabel="false"
             showRowCounter="false"
             rowFocusAnimationStyle="floatingFocus"
             itemSpacing="[[60,0]]"
             rowItemSpacing="[[60,0]]"
             rowItemSize="[[500,320]]"
             itemSize="[500,320]"
             visible="true" />
  </children>
</component>